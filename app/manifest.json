{
    "manifest_version": 3,
    "name": "BigQuery Toolbox",
    "description": "More room to focus on your code: Hides / unhides the BQ Explorer side panel and (optionally) the top toolbar and the query results.",
    "version": "2.0.1",
    "homepage_url" : "https://github.com/SebastianArcq/bigquery-toolbox/",
    
    "icons": { 
        "128": "icon_128.png" 
    },

    "action": {
        "default_icon": "icon.png"
    },

    "background": { 
        "service_worker": "background-wrapper.js"
	},

    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "tabs"
    ],

    "host_permissions": [
        "https://console.cloud.google.com/bigquery"
    ],
    
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      },

    "commands": {
		"toggle-qjs": {
			"suggested_key": { "default": "Alt+Shift+Y", "mac": "Command+Shift+Y" },
			"description": "Toggle BigQuery Toolbox"
		}
  	}
}