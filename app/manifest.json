{
    "manifest_version": 3,
    "name": "Hide BigQuery Explorer Panel",
    "description": "Hide and unhide the BigQuery Explorer sidepanel with one click, giving you more room to code.",
    "version": "1.4.0",
    "homepage_url" : "https://arcq.de/hide-bigquery-explorer-panel/",
    
    "icons": { 
        "128": "icon_128.png" 
    },

    "action": {
        "default_icon": "icon.png"
    },

    "background": { 
        "service_worker": "background-wrapper.js"
	},

    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      },

    "commands": {
		"toggle-qjs": {
			"suggested_key": { "default": "Alt+Shift+Y", "mac": "Command+Shift+Y" },
			"description": "Toggle BQ Explorer Panel"
		}
  	}
}