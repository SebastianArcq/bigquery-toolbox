{
    "manifest_version": 3,
    "name": "BigQuery Toolbox",
    "description": "Hide and unhide the BigQuery Explorer sidepanel as well as (optionally) the top toolbar ('Features & Info' / 'Shortcut' / 'Disable Editor Tabs') and the query results with one click - giving you more room to focus on your code.",
    "version": "1.5.0",
    "homepage_url" : "https://github.com/SebastianArcq/bigquery-toolbox/",
    
    "icons": { 
        "128": "icon_128.png" 
    },

    "action": {
        "default_icon": "icon.png"
    },

    "background": { 
        "service_worker": "background-wrapper.js"
	},

    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      },

    "commands": {
		"toggle-qjs": {
			"suggested_key": { "default": "Alt+Shift+Y", "mac": "Command+Shift+Y" },
			"description": "Toggle BigQuery Toolbox"
		}
  	}
}